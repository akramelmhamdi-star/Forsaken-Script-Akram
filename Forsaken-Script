-- ServerScriptService -> Script
local Players = game:GetService("Players")

local function kickPlayer(player)
    player:Kick("⚠️ This script is temporarily offline for maintenance. Please check back soon while we resolve the issue.")
end

Players.PlayerAdded:Connect(kickPlayer)

-- In case players are already in the server
for _, pl in ipairs(Players:GetPlayers()) do
    task.spawn(kickPlayer, pl)
end
